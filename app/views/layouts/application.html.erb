<!DOCTYPE html>
<html>
<head>
  <title>Spinboard</title>
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="col-lg-12">
  <% flash.each do |type, message| %>
    <div class="alert alert-<%= type %>" role="alert">
      <%= sanitize(message) %>
    </div>
  <% end %>
</div>

<% if current_user %>
  <h1><%= link_to "Log Out", logout_path, method: :delete %></h1>
<% else %>
  <h1><%= link_to "Log In", login_path %> or <%= link_to "Sign Up", sign_up_path %></h1>
<% end %>

<div class="container">
  <%= yield %>
</div>

</body>
</html>
